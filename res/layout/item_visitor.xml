<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white">
        <com.cwl.app.widget.RoundImageView 
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_visitor_avatar"
            android:src="@drawable/pic_head3"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_visitor_avatar"
            android:layout_marginLeft="20dp"
            android:textColor="@color/home_item_name"
            android:id="@+id/tv_visitor_name"
            android:textSize="15.0dp"
            android:text="null"/>
        <ImageView 
            android:layout_width="11.0dp"
            android:layout_height="11.0dp"
            android:layout_toRightOf="@+id/tv_visitor_name"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_visitor_sex"
            android:src="@drawable/pic_male"/>
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/iv_visitor_mark"
            android:src="@drawable/pic_duihao"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="60dp"/>
</LinearLayout>
