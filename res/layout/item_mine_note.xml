<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp" >
        <ImageView 
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pic_test1"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_mine_note"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_mine_note"
            android:layout_marginLeft="15dp"
            android:textColor="@color/home_item_content"
            android:textSize="14.0dp"
            android:id="@+id/tv_mine_note_cnt"
            android:layout_marginRight="15dp"
            android:maxLines="3"
            android:text="大连的海上落日真的很美"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_note_label"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/iv_mine_note"
            android:textColor="#949494"
            android:textSize="12.0dp"
            android:text="来自：文青聚集地"
            android:layout_marginLeft="15dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/home_item_time"
            android:textSize="12.0dp"
            android:text="2015年10月9日"
            android:id="@+id/tv_mine_note_time"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>
