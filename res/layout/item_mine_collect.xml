<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ui_color_gray" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/frame_mine_note_item">
        <com.app.view.baseview.RoundImageView 
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/pic_msg_head1"
            android:id="@+id/iv_mine_collect_avatar"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_mine_collect_avatar"
            android:layout_marginTop="8dp"
            android:id="@+id/layout_mine_collect_name"
            android:layout_marginLeft="10dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15.0dp"
                android:textColor="@color/home_item_name"
                android:layout_centerVertical="true"
                android:text="迷路的安娜"
                android:id="@+id/tv_mine_collect_name"/>
            <ImageView 
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_mine_collect_name"
                android:id="@+id/iv_mine_collect_sex"
                android:src="@drawable/pic_female"/>
        </RelativeLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_mine_collect_name"
            android:layout_alignBottom="@+id/iv_mine_collect_avatar"
            android:textColor="@color/home_item_time"
            android:textSize="12.0dp"
            android:id="@+id/tv_mine_collect_time"
            android:text="昨天23:43"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mine_collect_avatar"
            android:layout_alignLeft="@+id/layout_mine_collect_name"
            android:textSize="15.0dp"
            android:maxLines="4"
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_mine_collect_cnt"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/iv_mine_collect_cntImg"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="我发誓，我真的活过。"/>
        <ImageView 
            android:layout_height="62dp"
            android:layout_width="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pic_test1"
            android:scaleType="fitXY"
            android:id="@+id/iv_mine_collect_cntImg"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/v_collect_below"
            android:layout_below="@+id/tv_mine_collect_cnt"/>
    </RelativeLayout>
    
</LinearLayout>
