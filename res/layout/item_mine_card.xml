<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:scaleType="fitXY"
            android:id="@+id/iv_mine_card"
            android:src="@drawable/pic_test1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_mine_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:singleLine="true"
                android:text="在大黑山归来的路上"
                android:textColor="@color/find_card_title"
                android:textSize="15.0dp" />

            <View
                android:id="@+id/line_mine_card"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_mine_card_title"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/find_card_tile_content_line" />

            <TextView
                android:id="@+id/tv_mine_card_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_mine_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:maxLines="3"
                android:text="我发誓，我真的活过。"
                android:textColor="@color/find_card_content"
                android:textSize="14.0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp" >

                <TextView
                    android:id="@+id/tv_mine_card_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="15"
                    android:textColor="@color/home_item_good"
                    android:textSize="13.0dp" />

                <ImageView
                    android:id="@+id/iv_mine_card_good"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_mine_card_good"
                    android:src="@drawable/pic_good_nor" />

                <TextView
                    android:id="@+id/tv_mine_card_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_mine_card_good"
                    android:text="10"
                    android:textColor="@color/home_item_comment"
                    android:textSize="13.0dp" />

                <ImageView
                    android:id="@+id/iv_mine_card_coment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_mine_card_comment"
                    android:src="@drawable/pic_comment_nor" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>