<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ui_color_gray" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/layout_headerview_card_detail_cnt"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_find_card" >

        <ImageView
            android:id="@+id/cmv_card_img"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_test1" />

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmv_card_img"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="在大黑山归来的路上"
            android:textColor="@color/find_card_title"
            android:textSize="18.0dp" />

        <View
            android:id="@+id/line_card"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_card_title"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/find_card_tile_content_line" />

        <TextView
            android:id="@+id/tv_card_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_card"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:minHeight="120dp"
            android:gravity="top"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textColor="@color/find_card_content"
            android:textSize="16.0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_card_cnt"
            android:background="@color/find_card_name_bg" >

            <com.app.view.baseview.RoundImageView
                android:id="@+id/iv_card_avatar"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/pic_msg_head1" />

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_card_avatar"
                android:text="迷路的安娜"
                android:textColor="@color/find_card_title"
                android:textSize="14.0dp" />

            <TextView
                android:id="@+id/tv_card_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="15"
                android:textColor="@color/home_item_good"
                android:textSize="13.0dp" />

            <ImageView
                android:id="@+id/img_card_good"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tv_card_good"
                android:src="@drawable/pic_good_nor" />

            <TextView
                android:id="@+id/tv_card_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_card_good"
                android:text="10"
                android:textColor="@color/home_item_comment"
                android:textSize="13.0dp" />

            <ImageView
                android:id="@+id/img_card_coment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tv_card_comment"
                android:src="@drawable/pic_comment_nor" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_card_headerview_bottom"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:background="#F2F2F2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:singleLine="true"
            android:text="2015-09-11 07:23 放置"
            android:textColor="#949494"
            android:textSize="13.0dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:src="@drawable/pic_delete" />
    </RelativeLayout>

</LinearLayout>