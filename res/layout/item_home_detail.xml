<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.cwl.app.widget.RoundImageView
            android:id="@+id/img_home_detail_cmt_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/default_avatar" />

        <RelativeLayout
            android:id="@+id/layout_home_detail_cmt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7.5dp"
            android:layout_toRightOf="@+id/img_home_detail_cmt_head" >

            <TextView
                android:id="@+id/tv_home_detail_cmt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="top"
                android:text="暗龙袭击"
                android:textColor="@color/home_item_content"
                android:textSize="16.0dp" />

            <ImageView
                android:id="@+id/img_home_detail_cmt_sex"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_home_detail_cmt_name"
                android:src="@drawable/pic_male" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_detail_cmt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_home_detail_cmt_head"
            android:layout_alignLeft="@+id/layout_home_detail_cmt_name"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:text="4小时前"
            android:textColor="@color/home_detail_gray"
            android:textSize="11.5dp" />
        <TextView
            android:id="@+id/tv_home_detail_cmt_floor"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/img_home_detail_cmt_head"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="1楼"
            android:textColor="#3399FF"
            android:textSize="14.0dp" />
        <TextView
            android:id="@+id/tv_home_detail_cmt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_home_detail_cmt_head"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/layout_home_detail_cmt_name"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="2dp"
            android:text=""
            android:textColor="@color/home_item_content"
            android:textSize="16.0dp" />
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#F2F2F2"/>
</LinearLayout>