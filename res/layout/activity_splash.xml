<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <ImageView android:layout_width="70.0dp"
         android:layout_height="70.0dp"
         android:contentDescription="@string/img"
         android:layout_centerHorizontal="true"
         android:layout_above="@+id/tv_short"
         android:src="@drawable/ic_launcher"
         android:layout_marginBottom="20dp"
         android:id="@+id/iv_launcher"/>
     <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="16.0dp"
         android:layout_centerInParent="true"
         android:id="@+id/tv_short"
         android:text="大工人自己的社交平台"/>
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="20dp"
         android:id="@+id/tv_version"
         android:textSize="14.0dp"
         />
</RelativeLayout>
