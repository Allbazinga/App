<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ui_color_gray" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pic_others_info_bg">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="3dp">
            <ImageView 
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/pic_back_white"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="19dp"
                android:textColor="@color/white"
                android:text="@string/self_info"
                android:textStyle="bold"/>
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/pic_more"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout 
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:id="@+id/rlt_info_avatar"
                android:background="@drawable/bg_mine_avatar"
                android:layout_centerHorizontal="true">
                <com.app.view.baseview.RoundImageView 
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pic_head3"/>
            </RelativeLayout>
              <TextView 
                android:id="@+id/tv_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="28dp"
                android:layout_below="@+id/rlt_info_avatar"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="迷路的安娜"
                android:textStyle="bold"
                android:textSize="20.0dp"/>
            <ImageView
                android:layout_width="14.0dp"
                android:layout_height="14.0dp"
                android:layout_toRightOf="@+id/tv_info_name"
                android:layout_alignTop="@+id/tv_info_name"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_female"
                android:layout_marginLeft="4dp" />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_info_name"
                android:layout_marginTop="2dp"
                android:id="@+id/rlt_info_mark"
                android:layout_height="45dp">
                <View android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/v_divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/v_divider"
                    android:layout_marginRight="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:text="关注 4"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/v_divider"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:text="粉丝 21"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/tv_info_sign"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/rlt_info_mark"
                android:maxLines="2"
                android:textSize="11.5dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="如果有来生，我要做一棵树，站成永恒，没有悲欢的姿势"
                android:lineSpacingExtra="2dp"/>
            <View android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/v_below_sign"
                android:layout_below="@+id/tv_info_sign"/>
            <Button 
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="关注Ta"
                android:layout_alignTop="@+id/v_below_sign"
                android:layout_toLeftOf="@+id/v_below_sign"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:textSize="14.0dp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_info"/>
            <Button 
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="聊天"
                android:layout_alignTop="@+id/v_below_sign"
                android:layout_toRightOf="@+id/v_below_sign"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="14.0dp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_info"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
